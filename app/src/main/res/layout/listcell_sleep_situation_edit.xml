<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/commonBackgroundColor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/list_cell_common"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/commonTextColor"
            android:textSize="19dp"
            android:text="饭"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:id="@+id/sleep_edit_situation_title_textview"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sleep_edit_situation_textview"
                android:text="入睡时间："
                android:textColor="@color/commonTextColor"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

            </TextView>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/sleep_edit_situation_speed_radiogroup"
                android:layout_toRightOf="@id/sleep_edit_situation_textview">
                <RadioButton
                    style="@style/listcell_edit_item"
                    android:checked="true"
                    android:text="很晚"
                    android:id="@+id/sleep_edit_situation_rb_late"
                    />
                <RadioButton
                    style="@style/listcell_edit_item"
                    android:text="较晚"
                    android:id="@+id/sleep_edit_situation_rb_normal"/>
                <RadioButton
                    style="@style/listcell_edit_item"
                    android:text="较早"
                    android:id="@+id/sleep_edit_situation_rb_early"/>
            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/commonBoarderColor"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/common_button"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="提交"
                android:layout_centerInParent="true"
                android:id="@+id/sleep_edit_situation_commit_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="123"
                android:textSize="17sp"
                android:textColor="@color/mainThemeColor"
                android:visibility="invisible"
                android:layout_marginLeft="14dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/sleep_edit_situation_score_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="date"
                android:textSize="17sp"
                android:textColor="@color/commonGlayTextColor"
                android:visibility="invisible"
                android:layout_marginRight="14dp"
                android:layout_alignParentRight="true"
                android:id="@+id/sleep_edit_situation_update_textview"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>